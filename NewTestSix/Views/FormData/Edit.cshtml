@model NewTestSix.Models.FormData

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>FormData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TextBoxStringData" class="control-label"></label>
                <input asp-for="TextBoxStringData" class="form-control" />
                <span asp-validation-for="TextBoxStringData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextBoxIntData" class="control-label"></label>
                <input asp-for="TextBoxIntData" class="form-control" />
                <span asp-validation-for="TextBoxIntData" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckboxData" /> @Html.DisplayNameFor(model => model.CheckboxData)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
